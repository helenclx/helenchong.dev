---
pagination:
    data: collections.categories
    size: 1
    alias: category
permalink: /blog/categories/{{ category | slugify }}/
layout: main/base
eleventyComputed:
    title: 'Category: "{{ category }}"'
---

<h2 class="heading--main">Blog Post Category: "{{ category }}"</h2>

{% set posts = collections.posts | filterByCategory(category) %}
{% for post in posts | reverse %}
    <p>
        <a href="{{post.url}}">{{ post.data.title }}</a>, posted {{ post.date | niceDate }}<br/>
    </p>
{% endfor %}