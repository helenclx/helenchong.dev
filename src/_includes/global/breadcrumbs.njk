{% if isArticle or hasBreadcrumbs %}
<nav class="breadcrumbs" aria-labelledby="breadcrumbs-title">
    <h2 class="visually-hidden" id="breadcrumbs-title">Breadcrumbs</h2>
    {% set breadcrumbNavPages = collections.all | eleventyNavigationBreadcrumb(eleventyNavigation.key or pageTitle or title, { allowMissing: true }) %}
    {%- for entry in breadcrumbNavPages %}
    <a href="{{ entry.url }}">{{ entry.title }}</a> <span aria-hidden="true">âž”</span>
    {%- endfor %}
</nav>
{% endif %}