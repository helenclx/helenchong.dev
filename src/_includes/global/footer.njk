<footer class="footer">
    <img src="/assets/icons/helenchong-88x31.png" alt="Helen Chong's 88x31 website button" width="88" height="31">

    {% include "global/socials.njk" %}

    <p>Built with &#x2661; by {{ sitemeta.siteAuthor.name }}. 2023â€“{% currentYear %}.</p>

    <ul class="inline-list">
        <li><a href="/blog/feed.xml">RSS Feed</a></li>
    {%- for statement in collections.statements -%}
        <li><a
            {% if entry.url == page.url %}aria-current="page"{% endif %}
            href="{{ statement.url }}"
        >{{ statement.data.title }}</a></li>
    {%- endfor -%}
    </ul>

    <p>Built with <a href="https://www.11ty.dev/">Eleventy</a>. <a href="https://github.com/helenclx/helenchong.dev" class="external-link">Source Code</a>.</p>

    {% include "global/top-btn.njk" %}
    {% include "global/h-card.njk" %}
</footer>

{%- css %}
    .footer {
        width: 100%;
        padding: 2em 1em clamp(2em, calc(100% - 2rem), 3em);
        text-align: center;
        display: flex;
        gap: 0.5em;
        flex-direction: column;
        justify-content: center;
        align-tems: center;
        box-shadow: var(--bs-footer);
    }

    .footer img { margin: 0 auto 0.8em; }
{% endcss %}