---
layout: main/base
---
<p><a href="/projects/"><i class="fa-solid fa-arrow-left"></i> Back to projects</a></p>

<article class="project">
    <h1 class="project__heading">{{ title }}</h1>
    <div class="project__image-wrapper">
        {% EleventyImage image, imageAlt, "(min-width: 30em) 50vw, 100vw" %}
    </div>
    <div class="project__content prose">
        <h2>Project links</h2>
        <ul>
            {% if siteUrl -%}
                <li><a href="{{ siteUrl }}">Project Site</a></li>
            {%- endif %}
            <li><a href="{{ repoUrl }}">Project Repository</a></li>
        </ul>

        {{ content | safe }}
    </div>
</article>