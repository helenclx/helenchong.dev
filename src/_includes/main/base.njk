        {# CSS #}
        <link rel="stylesheet" href="{{'/assets/css/style.css' | url | safe}}">

        <title>{% if title %} {{ title }} | {% endif %} Helen Chong | Front-End Web Developer</title>
    </head>
    <body>
        <div class="content">
            {% include "main/header.njk" %}
            <main class="main container">
                {{ content | safe }}
            </main>
        </div>
        {% include "main/footer.njk" %}
